{
  "hosting": {
    "site": "ddisplay-e3562",
    "public": "/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/manage",
        "destination": "/pages/manage.html"
      },
      {
        "source": "/display",
        "destination": "/pages/display.html"
      },
      {
        "source": "/display/add/extention",
        "destination": "/pages/addextention.html"
      },
      {
        "source": "**",
        "destination": "pages/index.html"
      }
    ]
  }
}
